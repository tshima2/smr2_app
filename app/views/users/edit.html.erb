<article class="container_article">

<h2>Edit Profile@<%= @user.name %></h2>
<%= form_with(model: @user, local: true, url: user_path ) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>error(s) occured.</h2>
      <ul>

      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
<tr>
  <td align="right">
    <%= form.label :name %>
  </td>
  <td>
    <%= form.text_field :name %>
  </td>
</tr>

<tr>
  <td align="right">
    <%= form.label :email %>
  </td>
  <td>
    <%= form.text_field :email %>
  </td>
</tr>

<tr>
  <td align="right">
    <%= form.label :password %>
  </td>
  <td>
    <%= form.password_field :password %>
  </td>
</tr>

<tr>
  <td align="right">
    <%= form.label :password_confirmation %>
  </td>
  <td>
    <%= form.password_field :password_confirmation %>
  </td>
</tr>

<tr>
  <td colspan=2>
    <%= form.submit "submit", class: "btn btn-info" %>
  </td>
  <td>
  </td>
</tr>
</table>

<% end %>
</article>